generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum RolePd {
  OPERATOR_KELAS
  ADMINISTRATOR
  NORMAL
}

enum TipePresensi {
  IZIN
  SAKIT
  ALPHA
  HADIR
}

model Kelas {
  id               String  @id
  kelas            String
  whatsappGroupJid String?

  anggota        PesertaDidik[]
  jadwalPiket    JadwalPiket[]
  kehadiranPiket KehadiranPiket[]
  presensi       Presensi[]

  dendaPiket BigInt @default(5000)
}

model PesertaDidik {
  id        String  @id
  rombel    String
  hariPiket String?

  nama           String
  nisn           String?
  kelas          Kelas            @relation(fields: [rombel], references: [id])
  piket          JadwalPiket?     @relation(fields: [hariPiket], references: [hari])
  presensi       Presensi[]
  role           RolePd           @default(NORMAL)
  kehadiranPiket KehadiranPiket[]
  ponsel         String?
  agama          String
  gender         String

  passwordAuth String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Presensi {
  id      Int    @id @default(autoincrement())
  rombel  String
  idSiswa String

  kelas Kelas        @relation(fields: [rombel], references: [id])
  siswa PesertaDidik @relation(fields: [idSiswa], references: [id])

  tipe      TipePresensi @default(HADIR)
  createdAt DateTime     @default(now())
}

model KehadiranPiket {
  id      Int    @id @default(autoincrement())
  rombel  String
  idSiswa String

  proofPhoto    String // bukti piket
  ponselPelapor String?
  keterangan    String? @db.LongText
  messageId     String

  kelas Kelas        @relation(fields: [rombel], references: [id])
  siswa PesertaDidik @relation(fields: [idSiswa], references: [id])

  waktu DateTime @default(now())
}

model JadwalPiket {
  id     Int    @id @default(autoincrement())
  rombel String

  hari    String         @unique
  anggota PesertaDidik[]

  Kelas Kelas @relation(fields: [rombel], references: [id])
}
